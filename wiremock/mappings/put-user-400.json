{
  "priority": 1,
  "request": {
    "method": "PUT",
    "urlPathPattern": "/users/\\d+",
    "headers": {
      "Content-Type": {
        "matches": "application/json.*"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?((@.name == '' || @.name == null) || (@.username == '' || @.username == null) || !(@.email =~ /^.+@.+\\..+$/) || (@.password =~ /^.{0,7}$/) || (@.password =~ /^.{31,}$/) || !(@.creationDate =~ /^\\d{4}-\\d{2}-\\d{2}$/))]"
      }
    ]
  },
  "response": {
    "status": 400,
    "headers": {
      "Content-Type": "application/json"
    },
    "bodyFileName": "invalidFormat.json"
  }
}